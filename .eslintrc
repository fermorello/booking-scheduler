{
  "env": {
    "es6": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx", "svg"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"]
}
